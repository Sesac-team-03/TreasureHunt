<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 -->
    <style name="PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Font">
        <item name="fontFamily">@font/pretendard</item>
    </style>

    <!-- 홈 액티비티 -->
    <style name="HomeBottomNavigationView">
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemIconTint">@color/home_bnv_home</item>
        <item name="itemTextColor">@color/home_bnv_home</item>
    </style>

    <!--로그인 화면-->
    <style name="Font.Login">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Font.Login.Naver">
        <item name="iconSize">24sp</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Font.Login.Guest">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@android:color/transparent</item>
    </style>

    <style name="Font.Login.TreasureHunt">
        <item name="android:textSize">40sp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <!--기록 저장 화면 -->
    <style name="SaveLogTitle">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="SaveLogPhoto">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle</item>
    </style>

    <style name="Font.SaveLogText">
        <item name="android:background">@drawable/button_record</item>
        <item name="android:gravity">top|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="Font.SaveLogSave">
        <item name="android:backgroundTint">@drawable/selector_button_record_background</item>
        <item name="android:textColor">@drawable/selector_button_record_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/middle</item>
    </style>

    <style name="SaveLogImage">
        <item name="cornerSize">12dp</item>
    </style>

    <!-- 지도 전체 화면 -->
    <style name="Font.SaveLogMapTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/xLarge</item>
    </style>

    <!-- 기록 상세 화면 -->
    <style name="Font.LogDetailLoadFailMessage">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textSize">@dimen/middle</item>
    </style>

    <style name="Font.LogDetailText">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <!-- 프로필 화면 -->
    <style name="Font.ProfileNickname">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle</item>
    </style>

    <style name="Font.ProfileAccount">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <!-- 피드 화면 -->
    <style name="Font.NoTreasureText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/xxLarge</item>
    </style>

    <!-- 설정 화면 -->
    <style name="SettingTitle">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="Font.SettingLogin">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle</item>
    </style>

    <style name="ProfileImage">
        <item name="cornerSize">24dp</item>
    </style>

    <!-- 회원 탈퇴 다이얼로그 화면 -->
    <style name="Font.DeleteUserTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/xLarge</item>
    </style>

    <style name="Font.DeleteUserCancel">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="Font.DeleteUserDelete">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small</item>
    </style>
</resources>